mixin menu()
    #menu.navbar-collapse.collapse
        ul.nav.navbar-nav
            li: a(href='/list/queen-endings') Queen Endings
            li: a(href='/list/rook-endings') Rook Endings
            li: a(href='/list/rook-vs-minor-piece') Rook vs. Minor Piece
            li: a(href='/list/minor-piece-endings/bishop-endings') Bishop Endings
            li: a(href='/list/minor-piece-endings/opposite-color-bishops') Opposite Colored Bishops
            li: a(href='/list/minor-piece-endings/knight-endings') Knight Endings
            li: a(href='/list/pawnless-endings') Pawnless Endings
            li: a(href='/list/pawn-endings') King &amp; Pawn Endings

doctype html
html(lang='en')
    head
        title=title
        meta(name='viewport', content='width=device-width, initial-scale=1.0')
        script(src='/js/jquery-1.11.2.min.js')
        script(src='/js/bootstrap.min.js')
        script(src='/js/pgn4web.js')
        script(src='/js/chess-informant-NAG-symbols.js')
        script(src='/js/app.js')
        link(rel='stylesheet', type='text/css', href='/css/bootstrap.min.css')
        link(rel='stylesheet', type='text/css', href='/css/bootstrap-theme.min.css')
        link(rel='stylesheet', type='text/css', href='/css/pgn4web-font-LiberationSans.css')
        link(rel='stylesheet', type='text/css', href='/css/pgn4web-font-ChessSansPiratf.css')
        link(rel='stylesheet', type='text/css', href='/css/app.css')
    body
        nav.navbar.navbar-default.navbar-static-top(role='navigation')
            .container-fluid
                .navbar-header
                    button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#menu')
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    .row: a.navbar-brand(href='/') Rook &amp; Pawn
                    .row: .text-muted Endgames made easy
                +menu()

        #content.container-fluid
            block content

        footer.navbar.navbar-default.navbar-static-bottom
            .container-fluid
                .row.text-muted.text-center
                    p
                        span= "chess viewer courtesy of "
                        a(href="http://pgn4web.casaschi.net", target="_blank") pgn4web
                    strong= "|"
                    p Kevin Ludwig &copy; 2015, All rights reserved.
