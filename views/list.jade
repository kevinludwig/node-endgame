extends layout

mixin make-board(board)
    table.preview
        for x in range
            tr
                for y in range
                    -var className = (((x + y) % 2) === 0 ? 'white' : 'black') + 'Square';
                    td(class=className)
                        -var val = board[(x*8)+y];
                        if val
                            img(src=val)

block content
    for row in rows
        .row
            for board in row
                .col-xs-6.col-md-3
                    a.thumbnail(href='#'): +make-board(board)
                    .caption: p= "+/="
